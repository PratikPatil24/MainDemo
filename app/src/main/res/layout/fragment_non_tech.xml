<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="match_parent"

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/colorBackground">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="25dp"
        android:background="@color/colorBackground">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                >


                    <ImageView
                        android:id="@+id/idextrous"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ev_dextrous"

                        />


                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:text="DEXTROUS"
                    android:layout_gravity="center"/>

            </LinearLayout>




            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:background="@color/colorBackground"
                android:orientation="vertical">


                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cerebro"
                    android:focusable="true"
                    app:cardBackgroundColor="@color/colorBackground"
                    android:clickable="true"
                    android:elevation="10dp"
                    android:layout_weight="3">
                    <ImageView
                        android:id="@+id/icerebro"
                        android:layout_width="wrap_content"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ev_cerebro"
                        android:scaleType="centerCrop"/>

                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/colorWhite"
                    android:gravity="center"
                    android:text="CEREBRO"
                    android:layout_marginBottom="50dp"/>


            </LinearLayout>





        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:background="@color/colorBackground">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/fandom"
                    android:focusable="true"
                    app:cardBackgroundColor="@color/colorBackground"
                    android:clickable="true"
                    android:layout_weight="3"
                    android:elevation="10dp">
                    <ImageView
                        android:id="@+id/ifandom"
                        android:layout_width="wrap_content"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ev_fandomquiz"
                        />

                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:text="FANDOM QUIZ"
                    android:layout_gravity="center"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:background="@color/colorBackground"
                android:orientation="vertical">


                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/quiztobid"
                    android:focusable="true"
                    app:cardBackgroundColor="@color/colorBackground"
                    android:clickable="true"
                    android:elevation="10dp"
                    android:layout_weight="3">
                    <ImageView
                        android:id="@+id/iquiz2bid"
                        android:layout_width="wrap_content"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ev_quiz_to_bid"
                        android:scaleType="centerCrop"/>

                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/colorWhite"
                    android:gravity="center"
                    android:text="QUIZ TO BID"
                    android:layout_marginBottom="50dp"/>
            </LinearLayout>
        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:background="@color/colorBackground">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/photoshoproyale"
                    android:focusable="true"
                    app:cardBackgroundColor="@color/colorBackground"
                    android:clickable="true"
                    android:layout_weight="3"
                    android:elevation="10dp">
                    <ImageView
                        android:id="@+id/iphotoshoproyale"
                        android:layout_width="wrap_content"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ev_psroyale"
                        />

                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:text="PHOTOSHOP ROYALE"
                    android:layout_gravity="center"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:background="@color/colorBackground"
                android:orientation="vertical">


                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/insight"
                    android:focusable="true"
                    app:cardBackgroundColor="@color/colorBackground"
                    android:clickable="true"
                    android:elevation="10dp"
                    android:layout_weight="3">
                    <ImageView
                        android:id="@+id/iInsight"
                        android:layout_width="wrap_content"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ev_insight"
                        android:scaleType="centerCrop"/>

                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/colorWhite"
                    android:gravity="center"
                    android:text="INSIGHT"
                    android:layout_marginBottom="50dp"/>
            </LinearLayout>
        </LinearLayout>
            </LinearLayout>
</ScrollView>