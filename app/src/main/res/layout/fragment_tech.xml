<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorBackground"
    android:layout_width="match_parent">


    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:id="@+id/layout"
        android:layout_height="match_parent"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="25dp"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:background="@color/colorBackground">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/bugOff"
                    android:focusable="true"
                    app:cardBackgroundColor="@color/colorBackground"
                    android:clickable="true"
                    android:layout_weight="3"
                    android:elevation="10dp">
                    <ImageView
                        android:id="@+id/ibugoff"
                        android:layout_width="wrap_content"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ev_bugoff"
                        />

                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:text="BUG OFF"
                    android:layout_gravity="center"/>

            </LinearLayout>




            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:background="@color/colorBackground"
                android:orientation="vertical">


                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/codeBuddy"
                    android:focusable="true"
                    app:cardBackgroundColor="@color/colorBackground"
                    android:clickable="true"
                    android:elevation="10dp"
                    android:layout_weight="3">
                    <ImageView
                        android:id="@+id/icodebuddy"
                        android:layout_width="wrap_content"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ev_codebuddy"
                        android:scaleType="centerCrop"/>

                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/colorWhite"
                    android:gravity="center"
                    android:text="CODE BUDDY"
                    android:layout_marginBottom="50dp"/>


            </LinearLayout>





        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:background="@color/colorBackground">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/just_coding"
                    android:focusable="true"
                    app:cardBackgroundColor="@color/colorBackground"
                    android:clickable="true"
                    app:cardCornerRadius="5dp"
                    android:layout_weight="3"
                    android:elevation="10dp">
                    <ImageView
                        android:id="@+id/ijustcoding"
                        android:layout_width="wrap_content"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ev_justcoding"
                        />

                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:text="JUST CODING"
                    android:layout_gravity="center"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:background="@color/colorBackground"
                android:orientation="vertical">


                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/recode_it"
                    android:focusable="true"
                    app:cardBackgroundColor="@color/colorBackground"
                    android:clickable="true"
                    android:elevation="10dp"
                    android:layout_weight="3">
                    <ImageView
                        android:id="@+id/irecodeit"
                        android:layout_width="wrap_content"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:src="@drawable/recodeit"
                        />

                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/colorWhite"
                    android:gravity="center"
                    android:text="RECODE IT"
                    android:layout_marginBottom="50dp"/>
            </LinearLayout>
        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:background="@color/colorBackground">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/dataquest"
                    android:focusable="true"
                    app:cardBackgroundColor="@color/colorBackground"
                    android:clickable="true"
                    android:layout_weight="3"
                    android:elevation="10dp">
                    <ImageView
                        android:id="@+id/idataquest"
                        android:layout_width="wrap_content"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ev_dataquest"
                        />

                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:text="DATAQUEST"
                    android:layout_gravity="center"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:background="@color/colorBackground"
                android:orientation="vertical">


                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/web_app_dev"
                    android:focusable="true"
                    app:cardBackgroundColor="@color/colorBackground"
                    android:clickable="true"
                    android:elevation="10dp"
                    android:layout_weight="3">
                    <ImageView
                        android:id="@+id/iwebandappdev"
                        android:layout_width="wrap_content"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ev_webandroid"
                        android:scaleType="centerCrop"/>

                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/colorWhite"
                    android:gravity="center"
                    android:text="WEBAPP DEV"
                    android:layout_marginBottom="50dp"/>
            </LinearLayout>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:background="@color/colorBackground">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/electroquest"
                    android:focusable="true"
                    app:cardBackgroundColor="@color/colorBackground"
                    android:clickable="true"
                    android:layout_weight="3"
                    android:elevation="10dp">
                    <ImageView
                        android:id="@+id/ielectroquest"
                        android:layout_width="wrap_content"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ev_electroquest"
                        />

                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:text="ELECTROQUEST"
                    android:layout_gravity="center"
                    android:layout_marginBottom="50dp"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>